@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<center><img src="images/logo.jpg" width="400" /></center>

<table class="table">
    <thread>
        <tr>
            <th>From</th>
            <th>Subject</th>
            <th style="text-align: right;">Date/Time
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        </tr>
    </thread>

    <tbody>
        @foreach (var item in Model.listEmails)
        {
            <tr>
                <td>@item.EmailSender</td>
                <td>
                    @if (item.EmailIsRead.Equals("0")) {
                        <img src="images/yellow.gif" height="10pt"> 
                    }
                    <a href="/ReadMail/ReadEmail?emailid=@item.EmailID">@item.EmailSubject</a>
                </td>
                <td style="text-align: right;">@item.EmailDate</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary btn-sm" href="/ComposeMail/ComposeEmail?Sender=@User.Identity.Name">Compose New Email</a>